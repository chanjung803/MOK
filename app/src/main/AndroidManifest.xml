<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hello"
        tools:targetApi="31">

        <!-- 로그인 화면 설정 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 기존 액티비티들 -->
        <activity
            android:name=".ClassChoiceActivity"
            android:label="Second DayTimePicker" />
        <activity
            android:name=".DaytimeActivity"
            android:label="Second DayTimePicker" />
        <activity
            android:name=".TableActivity"
            android:label="Third Table pick" />
        <activity android:name=".MarketActivity" />
        <activity android:name=".NotificationActivity" />
        <activity
            android:name=".ReserveInfoActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ConfirmActivity"
            android:label="Fourth Confirm" />
        <activity
            android:name=".EndActivity"
            android:label="Last End" />
        <activity android:name=".MainActivity" />
    </application>
</manifest>
